@page
@model IndexModel

<div class="container" style="padding: 0 !important;">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 style="margin-bottom: 0">Transactions</h2>
        <button id="addButton" class="btn btn-success btn-sm" href="#" data-bs-toggle="modal" data-bs-target="#addTransactionModal"><span class="text-decoration-none text-white" style="font-weight: bold">Add a transaction</span></button>
    </div>

    <div id="x" style="max-height: calc(100vh - 195px); overflow-y: auto;" class="table-responsive table-responsive-sm">
        <table id="table1" class="table table-striped table-sm col-md-12">
            <thead>
            <tr>
                <th>Amount</th>
                <th style="text-align: center">Time</th>
                <th style="text-align: center">Date</th>
                <th style="text-align: center">Category</th>
                <th style="text-align: right"><span style="color: red;">Delete</span></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var transaction in Model.SortedTransactions!)
            {
                <tr>
                    <td style="color: @(transaction.Amount < 0 ? "red" : "green")">@transaction.Amount.ToString("F2") zł</td>
                    <td style="text-align: center">@transaction.Time.Hours.ToString("D2"):@transaction.Time.Minutes.ToString("D2")</td>
                    <td style="text-align: center" data-bs-toggle="popover" data-bs-title="Full date" data-bs-placement="top" data-bs-content="@transaction.Date.ToString("dd.MM.yyyy") (@transaction.Date.DayOfWeek)">@transaction.Date.ToString("dd.MM.yy")</td>
                    @if (!string.IsNullOrEmpty(transaction.Description))
                    {
                        <td style="text-align: center; text-decoration-line: underline" data-bs-toggle="popover" data-bs-title="Description" data-bs-placement="top" data-bs-content="@transaction.Description">@transaction.Category</td>
                    }
                    else
                    {
                        <td style="text-align: center">@transaction.Category</td>
                    }
                    <td  style="text-align: right">
                        <form method="post" asp-page-handler="Delete" asp-route-amount="@transaction.Amount" asp-route-category="@transaction.Category" asp-route-description="@transaction.Description" asp-route-datetime="@transaction.DateTime">
                            <button id="deleteButton" type="submit" class="btn" style="font-size: 0.9em;" onclick="return confirm('Are you sure you want to delete this @(transaction.Amount < 0 ? "expense" : "income") of @Math.Abs(transaction.Amount)&nbsp;zł?')">❌</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="addTransactionModal" tabindex="-1" aria-labelledby="addTransactionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addTransactionModalLabel">Add a new transaction:</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="transactionForm" method="post" asp-page-handler="Add">
                    <div class="mb-3">
                        <label class="form-label">Transaction type</label><br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="transactionType" id="incomeRadio" value="income">
                            <label class="form-check-label" for="incomeRadio">Income</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="transactionType" id="expenseRadio" value="expense" checked>
                            <label class="form-check-label" for="expenseRadio">Expense</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="amount" class="form-label">Amount</label>
                        <input style="font-size: 16px" type="number" class="form-control" id="amount" name="amount">
                    </div>
                    <div class="mb-3">
                        <label for="category" class="form-label">Category</label>
                        <select style="font-size: 16px" class="form-select" id="category" name="category"></select>
                    </div>
                    <div class="mb-3">
                        <label for="desciption" class="form-label">Description</label>
                        <input style="font-size: 16px" type="text" class="form-control" id="description" name="description">
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="time" class="form-label">Time</label>
                                <input style="font-size: 16px" type="time" class="form-control" id="time" name="time">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="date" class="form-label">Date</label>
                                <input style="font-size: 16px" type="date" class="form-control" id="date" name="date">
                            </div>
                        </div>
                    </div>
                    <button type="submit" style="background-color: green" class="btn btn-primary w-100">Add</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/popovers.js"></script>
<script src="js/isWebAppOniPhone.js"></script>
<script src="js/inputValidator.js"></script>